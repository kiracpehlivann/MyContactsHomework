<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyContacts.Views.EditContactPage">

    <StackLayout Padding="20">
        <Label Text="Edit Contact" FontSize="20" HorizontalOptions="Center"/>
        
        <Entry x:Name="NameEntry" Placeholder="Name" />
        <Entry x:Name="PhoneEntry" Placeholder="Phone" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />

        <Button Text="Save" Clicked="SaveButton_Clicked" />
        <Button Text="Cancel" Clicked="BackButton_Clicked" />
    </StackLayout>
</ContentPage>